<%- include('header') %>

<div>
    <div>
        <a href="/posts?author=<%= user._id %>"
           data-title="<%= user.name %>">
            <img class="avatar" src="/img/<%= user.avatar %>">
        </a>
    </div>
    <form method="post" action="/posts/<%= post._id %>/edit">
        <div>
            <label>标题</label>
            <input type="text" name="title" value="<%= post.title %>">
        </div>
        <div>
            <label>内容</label>
            <textarea name="content" rows="15"><%= post.content %></textarea>
        </div>
        <input type="submit" class="ui button" value="发布">

    </form>
</div>

<%- include('footer') %>